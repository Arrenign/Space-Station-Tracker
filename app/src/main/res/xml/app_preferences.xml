<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory xmlns:sample="http://schemas.android.com/apk/res-auto"
        android:title="Map">
        <com.pavelsikun.seekbarpreference.SeekBarPreference
            android:defaultValue="15"
            android:enabled="false"
            android:key="refresh_Rate"
            android:summary="Timespan between map relocating to ISS's new location"
            android:title="Refresh Rate"

            sample:msbp_dialogEnabled="false"
            sample:msbp_interval="1"
            sample:msbp_maxValue="30"
            sample:msbp_measurementUnit="sec/refresh"
            sample:msbp_minValue="1" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="lock_ISS"
            android:summary="Lock onto ISS and follow it on the map"
            android:title="Lock ISS" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="info_ISS"
            android:summary="Provide additional information about ISS on the map"
            android:title="Additional Info" />

        <ListPreference
            android:defaultValue="2"
            android:entries="@array/entry"
            android:entryValues="@array/entryValues"
            android:key="mapType"
            android:title="@string/mapType"
            android:summary="Change the map type from the previous page"/>

        <ListPreference
            android:defaultValue="5"
            android:entries="@array/color"
            android:entryValues="@array/colorValues"
            android:key="colorType"
            android:title="@string/colorType"
            android:summary="Change the color of ISS's prediction line"/>

        <ListPreference
            android:defaultValue="5"
            android:entries="@array/size"
            android:entryValues="@array/size"
            android:key="sizeType"
            android:title="@string/sizeType"
            android:summary="Change the size of ISS's prediction line"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="Notification"
        android:title="Notification">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="notification_ISS"
            android:summary="Notify when ISS is expected to fly over my location"
            android:title="ISS Notification" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="Advertisement"
        android:title="Advertisement">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="advertisement"
            android:summary="Disable all ads on the app"
            android:title="Advertisement" />
    </PreferenceCategory>

</PreferenceScreen>