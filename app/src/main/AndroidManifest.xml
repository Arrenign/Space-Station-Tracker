<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restart.spacestationtracker">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- Maps Activity -->
        <activity
            android:name=".MapsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_maps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Preferences -->
        <activity
            android:name=".Preferences"
            android:label="@string/label_setting"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restart.spacestationtracker.MapsActivity" />
        </activity>

        <!-- Locations -->
        <activity
            android:name=".Locations"
            android:label="@string/label_location"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restart.spacestationtracker.MapsActivity" />
        </activity>

        <!-- People in Space -->
        <activity
            android:name=".PeopleinSpace"
            android:label="@string/label_peopleinspace"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restart.spacestationtracker.MapsActivity" />
        </activity>

        <!-- Help -->
        <activity
            android:name=".Help"
            android:label="@string/label_help"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restart.spacestationtracker.MapsActivity" />
        </activity>

        <!-- Info -->
        <activity
            android:name=".Info"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restart.spacestationtracker.PeopleinSpace" />
        </activity>

        <!-- Live Stream -->
        <activity
            android:name=".LiveStream"
            android:label="@string/label_stream"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.restart.spacestationtracker.MapsActivity" />
        </activity>

        <!-- Alert Service -->
        <service
            android:name=".services.Alert"
            android:enabled="true" />

        <!-- AlertPeople Service -->
        <service
            android:name=".services.AlertPeople"
            android:enabled="true" />

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>